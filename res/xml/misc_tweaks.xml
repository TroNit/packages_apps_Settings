<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/misc_tweaks_title" >

        <com.android.settings.ose.SystemSettingCheckBoxPreference
            android:key="power_menu_onthego_enabled"
            android:title="@string/power_menu_onthego_title"
            android:defaultValue="false" />

        <PreferenceScreen
            android:id="@+id/halo_settings"
            android:title="@string/halo_settings_title"
            android:fragment="com.android.settings.ose.Halo" />

        <PreferenceScreen
            android:key="active_display"
            android:fragment="com.android.settings.ose.ActiveDisplaySettings"
            android:title="@string/ad_settings_title"
            android:summary="@string/ad_settings_summary" />

        <PreferenceScreen
            android:title="@string/lockscreen_notifications"
            android:fragment="com.android.settings.ose.LockscreenNotifications" />

        <PreferenceScreen
            android:key="app_sidebar"
            android:fragment="com.android.settings.ose.AppSidebar"
            android:title="@string/app_sidebar_title" />

        <PreferenceScreen
            android:key="gesture_anywhere"
            android:fragment="com.android.settings.ose.gestureanywhere.GestureAnywhereSettings"
            android:title="@string/gesture_anywhere_title" />

        <PreferenceScreen
            android:key="lock_clock"
            android:title="@string/lock_clock_title">
            <intent android:action="android.intent.action.MAIN"
                android:targetPackage="com.cyanogenmod.lockclock"
                android:targetClass="com.cyanogenmod.lockclock.preference.Preferences" />
        </PreferenceScreen>

	<PreferenceScreen
            android:key="notification_drawer_qs"
            android:fragment="com.android.settings.ose.NotificationDrawerQsSettings"
            android:title="@string/notification_drawer_qs_title" />

        <PreferenceScreen
            android:key="recents_apps_panel"
            android:fragment="com.android.settings.ose.RecentsPanel"
            android:title="@string/recent_apps_panel_title" />

         <ListPreference
            android:key="lcd_density"
            android:title="@string/custom_density_title"
            android:entries="@array/lcd_density_entries"
            android:entryValues="@array/lcd_density_entries" />

         <CheckBoxPreference
            android:key="disable_fc_notifications"
            android:title="@string/disable_fc_notifications_title"
            android:summary="@string/disable_fc_notifications_summary"
            android:persistent="false" />

</PreferenceScreen>
